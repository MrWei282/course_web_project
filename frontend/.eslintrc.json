{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "semi": 0,
        "comma-dangle": 0,
        "react/prop-types": 0,
        "camelcase": "off",
        "prefer-promise-reject-errors": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
